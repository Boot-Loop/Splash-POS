<UserControl x:Class="POS_UI.src.views.login_views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_UI.src.views.login_views"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="200" Width="300" Background="AliceBlue">
        <StackPanel>
            <Label Content="Login to your POS" HorizontalAlignment="Center" FontWeight="Bold" Margin="10" FontSize="18"/>
            <TextBox Text="Password" Foreground="LightGray" Width="240" Height="30" Padding="3" FontSize="16" Margin="0 40 0 0"/>
            <Button Content="Login" Width="240" Height="30" Margin="0 20 0 0"/>
        </StackPanel>   
    </Grid>
</UserControl>
