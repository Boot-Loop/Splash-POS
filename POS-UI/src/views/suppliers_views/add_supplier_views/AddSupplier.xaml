<Window x:Class="UI.Views.AddSupplier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.Views"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Title="AddSupplier" Height="400" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="First Name"     Margin="5 12 0 6"   FontSize="16" Height="30"/>
            <Label Content="Last Name"      Margin="5 6"        FontSize="16" Height="30"/>
            <Label Content="Address"        Margin="5 6"        FontSize="16" Height="30"/>
            <Label Content="EMail"          Margin="5 6"        FontSize="16" Height="30"/>
            <Label Content="Telephone"      Margin="5 6"        FontSize="16" Height="30"/>
            <Label Content="Comments"       Margin="5 6"        FontSize="16" Height="30"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox Text="{Binding FirstName}"  Margin="5 12 5 8"       FontSize="16" Height="30" Padding="1"/>
            <TextBox Text="{Binding LastName}"   Margin="5 4 5 8"        FontSize="16" Height="30" Padding="1"/>
            <TextBox Text="{Binding Address}"    Margin="5 4 5 8"        FontSize="16" Height="30" Padding="1"/>
            <TextBox Text="{Binding EMail}"      Margin="5 4 5 8"        FontSize="16" Height="30" Padding="1"/>
            <TextBox Text="{Binding Telephone}"  Margin="5 4 5 8"        FontSize="16" Height="30" Padding="1"/>
            <TextBox Text="{Binding Comments}"   Margin="5 4 5 6"        FontSize="16" Height="60" TextWrapping="Wrap" Padding="1"/>
            <Button Content="{Binding UpdateOrCreate}" Command="{Binding CreateOrUpdateCommand}" Margin="5 6" FontSize="18" Height="30" Width="200" Style="{DynamicResource ButtonCommon}" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
