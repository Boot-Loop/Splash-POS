<UserControl x:Class="UI.Views.Sales"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Views"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ContentControl x:Name="sales_content_control" Margin="0 30 0 0"/>
        <ComboBox IsEditable="False" ItemsSource="{Binding NewSales}" SelectedItem="{Binding SelectedSale}" Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding NameOfSale}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button Command="{Binding AddNewSaleCommand}" Width="100" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
